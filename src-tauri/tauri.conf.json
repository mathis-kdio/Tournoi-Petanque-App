{
  "package": {
    "productName": "Tournois de Petanque GCU",
    "version": "1.15.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:8081/",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.MK.PetanqueGCU",
      "publisher": "Mathis Cadio",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Mathis Cadio",
      "category": "Sports",
      "shortDescription": "Créer un tournoi de pétanque et ajouter les scores n'a jamais été aussi simple !",
      "longDescription": "Avec Tournois de Pétanque GCU, vous pouvez créer rapidement et gérer facilement un tournoi de pétanque sans internet ! Plusieurs types de tournois sont disponibles : mêlé-démêlé, championnat et coupe.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "bannerPath": "icons/wix_banner.bmp",
          "dialogImagePath": "icons/wix_dialog.bmp"
        },
        "nsis": {
          "headerImage": "icons/nsis_header.bmp",
          "sidebarImage": "icons/nsis_sidebar.bmp",
          "installerIcon": "icons/icon.ico"
        }
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "Tournois de Pétanque GCU",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
